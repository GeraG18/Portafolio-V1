---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import ScrollNumber from '../components/ScrollNumber.astro';
import NavigationBar from '../components/NavigationBar.astro';
import EmailDecorator from '../components/EmailDecorator.astro';
import LinkButton from '@/components/LinkButton.astro';
import DownloadIcon from '@/components/DownloadIcon.astro';
import Timeline from '@/components/Timeline.astro';

import {experience, studies} from '../env/strings'; 
import ScrollCTA from '@/components/ScrollCTA.astro';
import ProjectsPreview from '@/components/ProjectsPreview.astro';
import CursorDecorator from '@/components/CursorDecorator.astro';

let actualDate: Date = new Date();
---

<Layout title="Portafolio | Gerardo G.">
	<main>
