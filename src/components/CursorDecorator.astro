<div class="pointer-events-none opacity-0 lg:opacity-100 fixed inset-0 z-50 transition duration-300 lg:absolute" id="radialCursor"></div>

<script>
    document.addEventListener("astro:page-load", () => {
		/* number */
		let x, y = 0;

		/* htmlElement */
        let root = document.documentElement;
    
        root.addEventListener("mousemove", (e: MouseEvent) => {
            x = e.clientX;
			y = e.clientY; 
			
			let decorator = document.getElementById('radialCursor');
			decorator ? decorator.style.background = `radial-gradient(600px at ${x}px ${y}px, var(--accent-radial), transparent 80%)` : null;
        });
    });
</script>

