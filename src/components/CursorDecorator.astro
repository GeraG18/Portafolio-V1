<div class="main">
    <div class="ball z-[-10] hidden lg:flex" id='mouseBall'></div><!-- MOUSE -->
</div>

<script>
    document.addEventListener("astro:page-load", () => {
        let root = document.documentElement;
    
        root.addEventListener("mousemove", e => {
            root.style.setProperty('--mouse-x', e.clientX + "px");
            root.style.setProperty('--mouse-y', e.clientY + "px");
        });
    });
</script>

<style>
    .main {
        pointer-events: none;
		z-index: 2;
        position: absolute;
        top: 0%;
        left: 0%;
        width: 100%;
        height: 100%;
    }

    #mouseBall {
        left: var(--mouse-x);
        top: var(--mouse-y);
    }

    .ball {
